{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"noEmitHelpers": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": [
			"es2015",
			"dom"
		],
		"outDir": "dist"
	},
	"compileOnSave": false,
	"buildOnSave": false,
	"awesomeTypescriptLoaderOptions": {
		"forkChecker": true,
		"useWebpackText": true
	}
}
