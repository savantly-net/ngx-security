{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"stripInternal": true,
		"target": "ES5",
		"module": "es2015",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"noEmitHelpers": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"paths": {
			"@angular/core": [
				"node_modules/@angular/core"
			],
			"rxjs/*": [
				"node_modules/rxjs/*"
			],
			"jwt-decode/*": ["node_modules/jwt-decode/*"]
        },
		"lib": [
			"es2015",
			"dom"
		],
		"rootDir": ".",
		"outDir": "dist"
	},
	"compileOnSave": false,
	"buildOnSave": false,
	"awesomeTypescriptLoaderOptions": {
		"forkChecker": true,
		"useWebpackText": true
	},
	"files": [
		"index.ts"
	],
	"angularCompilerOptions": {
		"strictMetadataEmit": true,
		"genDir": "./aot"
	}
}
